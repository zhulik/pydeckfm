#:kivy 2.1



MDNavigationLayout:
    ScreenManager:
        Screen:

            BoxLayout:
                orientation: 'vertical'

                MDTopAppBar:
                    title: "Your App"
                    left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                Widget:

    MDNavigationDrawer:
        id: nav_drawer

        BoxLayout:
            orientation: 'vertical'

            MDLabel:
                text: "  Item 1"
                font_style: 'Subtitle1'
                size_hint_y: None
                height: self.texture_size[1]
                
            MDLabel:
                text: "  Item 2"
                font_style: 'Subtitle1'
                size_hint_y: None
                height: self.texture_size[1]